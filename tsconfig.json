{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "lib": [
      "ESNext",
    ],
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    // exports type with js
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}